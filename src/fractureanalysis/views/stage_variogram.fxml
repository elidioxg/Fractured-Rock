<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>

<GridPane 
    id="WhitePane" 
    prefHeight="600.0" 
    prefWidth="800.0" 
    styleClass="mainFxmlClass" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="fractureanalysis.controller.Stage_variogramController">
    <gridLinesVisible>true</gridLinesVisible>
    
    <stylesheets>
        <URL value="@app_style.css"/>
    </stylesheets>
    
    <columnConstraints>
        <ColumnConstraints percentWidth="15"/>
        <ColumnConstraints percentWidth="15"/>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="20"/>        
    </columnConstraints>
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="0"  
        text="Dataset">
    </Label>
    <ComboBox 
        fx:id="cbDatasets"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="0"  
    >
    </ComboBox>
    
    <Label
        GridPane.columnIndex="0" 
        GridPane.rowIndex="1" 
        text="Column X">
    </Label>
    <ComboBox 
        fx:id="cbX"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="1"
        onAction="#cbXYChange"
    >
    </ComboBox>
    
    <Label 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="2"
        text="Column Y">
    </Label>
    <ComboBox 
        fx:id="cbY"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="2"
        onAction="#cbXYChange"
    >
    </ComboBox>
    
    <Label 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="3"
        text="Column content">        
    </Label>
    <ComboBox 
        fx:id="cbContent"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="3"
    >
    </ComboBox>
    
    <Label
        GridPane.columnIndex="0" 
        GridPane.rowIndex="4"
        text="Variogram Properties"
    >
    </Label>
    
    <Label
        GridPane.columnIndex="0" 
        GridPane.rowIndex="5"
        text="Nugget">
        
    </Label>
    <TextField 
        fx:id="tfNugget"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="5"
        text="0."
    >        
    </TextField>
    
    <Label 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="6"
        text="Step size">
    </Label>
    <TextField 
        fx:id="tfStep"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="6"
    >
    </TextField>
    
    <Label 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="7"
        text="Tolerance distance">
    </Label>
    <TextField 
        fx:id="tfDistTol"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="7"
    >
    </TextField>
    
    <Label 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="8"
        text="Angle">
    </Label>
    <TextField 
        fx:id="tfAngle"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="8"
        text="0"        
    >
    </TextField>
    
    <Label 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="9"
        text="Angle tolerance">
    </Label>
    <TextField 
        fx:id="tfAngleTol"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="9"
        text="90"        
    >
    </TextField>
    
    <Label
        GridPane.columnIndex="0" 
        GridPane.rowIndex="10"
        text="Reflect">
    </Label>
    <CheckBox
        fx:id="cbReflect"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="10"
        selected="true"        
    >
    </CheckBox>
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="11"
        GridPane.columnSpan="2"
        text="Cutoff values">
        
    </Label>
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="12"
        text="min"    >        
    </Label>
    <TextField 
        fx:id="tfMinValue"
        GridPane.columnIndex="1" 
        GridPane.rowIndex="12"
    >        
    </TextField>
    
    <Label
        GridPane.columnIndex="0"
        GridPane.rowIndex="13"
        text="max">
    </Label>
    <TextField 
        fx:id="tfMaxValue"
        GridPane.columnIndex="1"
        GridPane.rowIndex="13"  >
        
    </TextField>
    
    <ButtonBar 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="15"
        GridPane.rowSpan="2" 
        GridPane.columnSpan="2" 
    >
        <buttons>
            <Button 
                ButtonBar.buttonData="APPLY"
                onAction="#plot" 
                text="Plot">
            </Button> 
            <Button 
                ButtonBar.buttonData="BACK_PREVIOUS"
                onAction="#clear" 
                text="Clear">
            </Button>   
            <Button 
                ButtonBar.buttonData="CANCEL_CLOSE"
                text="Close">
            </Button> 
            <Button                 
                text="View search window"
                onAction="#canvasDraw">
            </Button>             
        </buttons>
    </ButtonBar>
    
    <javafx.scene.chart.LineChart 
        fx:id="lcVariogram"
        GridPane.columnIndex="2" 
        GridPane.rowIndex="0"
        GridPane.rowSpan="13"
        legendVisible="false">
        <xAxis>
            <javafx.scene.chart.NumberAxis 
                label="Distance">
            </javafx.scene.chart.NumberAxis>
        </xAxis>
        <yAxis>
            <javafx.scene.chart.NumberAxis 
                label="Semivariance" >
            </javafx.scene.chart.NumberAxis>
        </yAxis>
    </javafx.scene.chart.LineChart>
    
    <ScrollPane 
        GridPane.columnIndex="3" 
        GridPane.rowIndex="1"
        GridPane.rowSpan="4"
    >
        <fx:include source="pane_curve_fitting.fxml"/>
        
    </ScrollPane>               
    
    <javafx.scene.chart.ScatterChart 
        fx:id="scLoc"
        GridPane.columnIndex="3" 
        GridPane.rowIndex="5"
        GridPane.rowSpan="5"
        legendVisible="false">
        <xAxis>
            <javafx.scene.chart.NumberAxis 
                label="X"
            />               
        </xAxis>
        <yAxis>
            <javafx.scene.chart.NumberAxis 
                label="Y"
            />               
        </yAxis>        
    </javafx.scene.chart.ScatterChart>                
    
</GridPane>

