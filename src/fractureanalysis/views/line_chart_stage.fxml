<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane 
    xmlns:fx="http://javafx.com/fxml/1"  
    id="gridLinePane" 
    prefHeight="600.0" 
    prefWidth="800.0"     
    fx:controller="fractureanalysis.controller.LineChartController" 
    alignment="CENTER"
    hgap="20"
    vgap="20">    
    <padding>
        <javafx.geometry.Insets ></javafx.geometry.Insets>
    </padding>
    
    <stylesheets>
        <URL value="@app_style.css"/>
    </stylesheets>
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="0" 
        text="Dataset:"/>
    <ComboBox 
        fx:id="cbDataset"
        GridPane.columnIndex="1"
        GridPane.rowIndex="0">
    </ComboBox>
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="1" 
        text="Graph label:"/>
    <TextField 
        fx:id="tfGraphLabel"
        GridPane.columnIndex="1"
        GridPane.rowIndex="1" 
        GridPane.columnSpan="2" >
    </TextField>
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="2" 
        text="X Axis label:" />
    <TextField 
        fx:id="tfXLabel"
        GridPane.columnIndex="1"
        GridPane.rowIndex="2"
        GridPane.columnSpan="2"
    />
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="3" 
        text="Y Axis label:"/>
    <TextField         
        fx:id="tfYLabel"
        GridPane.columnIndex="1"
        GridPane.rowIndex="3" 
        GridPane.columnSpan="2"/> 

    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="4" 
        text="X field data:"/>
    <ComboBox 
        fx:id="comboBoxX"
        GridPane.columnIndex="1"
        GridPane.rowIndex="4" >
    </ComboBox>
    
    <CheckBox fx:id="cbXSorted" 
              GridPane.columnIndex="2"
              GridPane.rowIndex="4" 
              selected="false" >
    </CheckBox>
    <Label 
        GridPane.columnIndex="3"
        GridPane.rowIndex="4" 
        text="Sorted" />

    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="5" 
        text="Y field data:"/>
    <ComboBox fx:id="comboBoxY"
              GridPane.columnIndex="1"
              GridPane.rowIndex="5" >
    </ComboBox>
    
    <CheckBox 
        fx:id="cbYSorted" 
        GridPane.columnIndex="2"
        GridPane.rowIndex="5" 
        selected="true" >
    </CheckBox>
    <Label 
        GridPane.columnIndex="3"
        GridPane.rowIndex="5" 
        text="Sorted" />

    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="6" 
        text="Serie Name:"/>
    <TextField         
        fx:id="tfSerieLabel"
        GridPane.columnIndex="1"
        GridPane.rowIndex="6"
        GridPane.columnSpan="2"    >
    </TextField>

    <ButtonBar GridPane.columnIndex="0"
               GridPane.rowIndex="7"
               GridPane.columnSpan="2">  
        <buttons>
            <Button         
                text="Add" onAction="#plotLine"  />
            <Button 
                fx:id="btnCloseLine"
                text="Close" 
                onAction="#closeLineStage"/>
            <Button 
                text="Clear" 
                onAction="#clearLineChart"/>
        </buttons>    
    
    </ButtonBar>
    
    <javafx.scene.chart.LineChart 
        fx:id="lineChart"
        GridPane.columnIndex="4"
        GridPane.rowIndex="0"
        GridPane.columnSpan="7"
        GridPane.rowSpan="7" 
    >
        <xAxis>
            <javafx.scene.chart.CategoryAxis 
                label="X"                 
            />                
        </xAxis>
        <yAxis>
            <javafx.scene.chart.CategoryAxis 
                label="Y"
            /> 
        </yAxis>        
    </javafx.scene.chart.LineChart>
       
</GridPane>
