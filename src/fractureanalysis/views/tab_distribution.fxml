<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane 
    id="AnchorPane" 
    prefHeight="800.0" 
    prefWidth="800.0" 
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="fractureanalysis.controller.SLVariogramController">
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.columnSpan="4" 
        GridPane.rowIndex="0" 
        text="Estimative of cumulative-frequency fracture-size distribution">        
    </Label>        
    
    <javafx.scene.chart.LineChart 
        fx:id="scFractureIntensity"
        GridPane.columnIndex="0"
        GridPane.rowIndex="1"
        GridPane.columnSpan="6"
        GridPane.rowSpan="6"
        legendVisible="false" >
        <xAxis >
            <javafx.scene.chart.NumberAxis label="Aperture"/> 
        </xAxis>
        <yAxis> 
            <javafx.scene.chart.NumberAxis label="Cumulative Fracture Intensity"/>
        </yAxis>
    </javafx.scene.chart.LineChart>    
    
    <Label
        GridPane.columnIndex="0"
        GridPane.rowIndex="8" 
        GridPane.columnSpan="2" 
        text="Estimate cumulative-frequency fracture-size value"
    >
    </Label>
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="9"
        text="Aperture value:">
    </Label> 
    
    <TextField 
        fx:id="tfApValueAt"
        GridPane.columnIndex="1"
        GridPane.rowIndex="9">
    </TextField>  
    
    <Button 
        GridPane.columnIndex="2"
        GridPane.rowIndex="9"
        text="Estimate"
        onAction="#estimate" >
    </Button>  
    
    <Label
        GridPane.columnIndex="0"
        GridPane.rowIndex="10"
        text="Value estimated:"
    >
    </Label>
    
    <Label 
        fx:id="lValue"
        GridPane.columnIndex="1"
        GridPane.rowIndex="10"
        text="">
    </Label>  
    
</GridPane>
