<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane 
    xmlns:fx="http://javafx.com/fxml/1" 
    id="gridPaneBar" 
    prefHeight="400.0" 
    prefWidth="600.0"     
    fx:controller="fractureanalysis.controller.AppController" 
    alignment="CENTER"
    hgap="10"
    vgap="10"
    >    
    <VBox 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="0"
        GridPane.columnSpan="4"
        GridPane.rowSpan="4"  
        >       
        <HBox>
            <Label text="Dataset:"/>
            <ComboBox fx:id="cbDataset"/>              
        </HBox>
        <HBox >
            <Label 
                text="Graph label:"/>
            <TextField fx:id="tfLabelChart"/>
        </HBox>        
        <HBox >
            <Label text="X Axis label:" />
            <TextField fx:id="tfLabelX"/>
        </HBox>
        <HBox >
            <Label text="Y Axis label:"/>
            <TextField fx:id="tfLabelY"/> 
        </HBox>
        <HBox >
            <Label text="X field data:"/>
            <ComboBox fx:id="cbDataX"></ComboBox>
            <CheckBox fx:id="cbSortX"></CheckBox>
            <Label text="Sorted"></Label>
        </HBox>
        <HBox >
            <Label text="Y field data:"/>
            <ComboBox fx:id="cbDataY"></ComboBox>
            <CheckBox fx:id="cbSortY"></CheckBox>
            <Label text="Sorted"/>
        </HBox>
        <HBox >
            <Button text="Add" onAction="#plotBar" />
            <Button text="Clear"/>
            <Button text="Close"/>
        </HBox>
        <HBox >
            <Label text="Serie name:"/>
            <TextField fx:id="tfBarSerie"></TextField>
        </HBox>        
    </VBox> 
    
    <javafx.scene.chart.BarChart 
        GridPane.columnIndex="4"
        GridPane.rowIndex="0"
        GridPane.columnSpan="4"
        GridPane.rowSpan="4"      
        fx:id="barChart"
    >
        
        <xAxis>
            <javafx.scene.chart.CategoryAxis label="X"/> 
        </xAxis>        
        <yAxis>
            <javafx.scene.chart.NumberAxis label="Y"/> 
        </yAxis>
    </javafx.scene.chart.BarChart>
    
</GridPane>
