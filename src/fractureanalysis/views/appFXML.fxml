<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="fractureanalysis.controller.AppController"     
    id="gridPane" 
    prefHeight="600.0" 
    prefWidth="800.0"     
    alignment="CENTER"
    hgap="10"
    vgap="10"           
>
    
    <padding>
        
    </padding>
    <gridLinesVisible>true</gridLinesVisible>
    <ListView 
        fx:id="lvDatasets"
        GridPane.columnIndex="1"
        GridPane.rowIndex="3"  
        onMouseClicked="#onMouseClicked"        
    >                
    </ListView>
    
    <TabPane GridPane.columnIndex="2"
             GridPane.rowIndex="3"
             GridPane.columnSpan="1"
             GridPane.rowSpan="2">
        
        <Tab text="Table">
                        
            <TableView 
                fx:id="tvDataset"                
            >                                
            </TableView>  
            
        </Tab>
        
        <Tab text="Summary">
            <content>
                <fx:include fx:id="summaryView" source="summary.fxml"/>
            </content>
            
        </Tab> 
        
        <Tab text="Histogram">
            <content>
                <fx:include fx:id="histogramView" source="histogram.fxml"/>
            </content>
        </Tab>
        
    </TabPane>   
    
    
    <ButtonBar GridPane.columnIndex="0"
               GridPane.rowIndex="0"
               GridPane.columnSpan="3"
               GridPane.rowSpan="1">        
        <buttons>            
            <Button fx:id="btnOpen"
                    onAction="#openFileStage" 
                    text="Open Data"
                    ButtonBar.buttonData="LEFT">
            </Button>             
            <Button text="Line Chart" onAction="#lineChartStage" ></Button>  
            <Button text="Bar Chart"  onAction="#barChartStage" ></Button>
            <Button text="Scatter Chart" ></Button> 
        </buttons>        
    </ButtonBar>
    
    <Label
        text="Datasets"
        GridPane.columnIndex="1"
        GridPane.rowIndex="2">
    </Label>   
    
    <Label 
        text="Data"
        GridPane.columnIndex="2"
        GridPane.rowIndex="2">
    </Label>   
    
    
    <VBox GridPane.columnIndex="1"
          GridPane.rowIndex="4"         
    >
        <HBox >
            
        </HBox>
    </VBox>                
    
    <ScrollPane 
        fx:id="spProperties"
        GridPane.columnIndex="1"
        GridPane.rowSpan="2" 
        GridPane.rowIndex="5">
                
        <content>
            <fx:include fx:id="datasetProperties" source="datasetProperties.fxml"/>                              
        </content>
        
    </ScrollPane>             
                                                                                
</GridPane>
