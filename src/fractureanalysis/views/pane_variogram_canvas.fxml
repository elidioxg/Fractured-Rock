<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>

<GridPane 
    id="WhitePane" 
    prefHeight="480.0" 
    prefWidth="600.0" 
    styleClass="mainFxmlClass" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="fractureanalysis.controller.Pane_variogram_canvasController">
    <stylesheets>
        <URL value="@app_style.css"/>
    </stylesheets>
    
    <columnConstraints>
        <ColumnConstraints percentWidth="50"></ColumnConstraints>
        <ColumnConstraints percentWidth="50"></ColumnConstraints>        
    </columnConstraints>
    
    <Label
        GridPane.columnIndex="0"
        GridPane.rowIndex="1"
        text="Angle: ">
        
    </Label>
    <Label 
        GridPane.columnIndex="1"
        GridPane.rowIndex="1"
        fx:id="lAngle"
    >
        
    </Label>
    
    <Label
        GridPane.columnIndex="0"
        GridPane.rowIndex="2"
        text="Tolerance angle: ">
        
    </Label>
    <Label 
        GridPane.columnIndex="1"
        GridPane.rowIndex="2"
        fx:id="lTolAangle"
    >
        
    </Label>
    
    <Label
        GridPane.columnIndex="0"
        GridPane.rowIndex="3"
        text="Reflect: ">
        
    </Label>
    <Label 
        GridPane.columnIndex="1"
        GridPane.rowIndex="3"
        fx:id="lReflect"
    >
        
    </Label>
    
    <Label
        GridPane.columnIndex="0"
        GridPane.rowIndex="4"
        text="Tolerance distance: ">
        
    </Label>
    <Label 
        GridPane.columnIndex="1"
        GridPane.rowIndex="4"
        fx:id="lTolDist">        
    </Label>    
        
    <Label
        text="Points"
        GridPane.columnIndex="0"
        GridPane.rowIndex="5">
        
    </Label>
    
    <ComboBox
        fx:id="cbPoints"
        GridPane.columnIndex="1"
        GridPane.rowIndex="5">
        
    </ComboBox>
    
    <Canvas
        fx:id="canvas"
        GridPane.columnIndex="0"
        GridPane.rowIndex="7"
        GridPane.rowSpan="3"
        GridPane.columnSpan="2"
        width="200"
        height="200">        
    </Canvas>        
    
</GridPane>
